@model CosmeticShop.Models.Products.ProductCategory

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #1A1310 !important;
    }
</style>


<section class="create-product-container">

    <h2>Удалить категории</h2>
    <div class="container-prosuct">
        <div class="row">
            <div class="col">
                <h3 class="text-center">Вы действительно хотите удалить категорию?</h3>


                <dl class="row d-flex justify-content-center">
                    <dt class="col-sm-6 text-center">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-6 text-left">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
                <div class="product-cat-btn">
                    <form asp-action="Delete">
                        
                        <div class="form-group d-inline mr-5 ml-5">
                            <a asp-action="Index" class="btn btn-outline-primary">Вернуться назад</a>
                        </div>
                        <div class="form-group d-inline">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Удалить" class="btn btn-danger" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
