@model CosmeticShop.Models.Products.ProductContainer

@{
    ViewData["Title"] = "Edit";
}
<style>
    body {
        background-color: #1A1310 !important;
    }
</style> 
<section class="create-product-container">
    <h2>Редактирование товара</h2>
    <div class="container-prosuct">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="ProductName" class="text-lable control-label">Название товара:</label>
                        <input asp-for="ProductName" class="form-input form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductCategoryId" class="text-lable control-label">Категория товара:</label>
                        <select asp-for="ProductCategoryId" class="form-input form-control"
                            asp-items="ViewBag.ProductCategoryId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CountProducts" class="text-lable control-label">Количество товара:</label>
                        <input asp-for="CountProducts" class="form-input form-control" />
                        <span asp-validation-for="CountProducts" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cost" class="text-lable control-label">Стоимость товара:</label>
                        <input asp-for="Cost" class="form-input form-control" />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Description" class="text-lable control-label">Описание:</label>
                        <input asp-for="Description" class="form-input form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateDate" class="text-lable control-label">Дата создания:</label>
                        <input asp-for="CreateDate" class="form-input form-control" />
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpirationDate" class="text-lable control-label">Срок годность до:</label>
                        <input asp-for="ExpirationDate" class="form-input form-control" />
                        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                    </div>
                    @* <div class="form-group">
                        <label class="text-lable control-label">Количество фотографий:</label>
                        <input class="form-input form-control" />
                        <span class="text-danger"></span>
                        </div> *@
                    @* <div class="form-group">
                        <div>
                            <label for="countImages" class="text-lable">Количество картинок</label>
                            <input type="number" name="countImages" id="countImages"
                                oninput="displayLoadImagesElements()" min="0" class="form-input form-control" />
                        </div>

                        <div id="images">
                    </div>
                        </div> *@
                    <div class="form-group">
                        <a asp-action="EditImages" asp-route-id="@Model.Id" class="text-lable-pick">Изменение изображений</a>
                    </div>

                    @* <div class="example-2">
                        <div class="form-group">
                        <input type="file" name="file" id="file" class="input-file">
                        <label for="file" class="btn btn-tertiary js-labelFile">
                        <i class="icon fa fa-check"></i>
                        <span class="js-fileName">Загрузить файл</span>
                        </label>
                        </div>
                        </div> *@
                    <script>
                        function displayLoadImagesElements() {
                            var countImages = document.getElementById('countImages').value;
                            var loadImagesInnerHtml = document.getElementById('images');


                            var html = "";
                            for (var i = 0; i < countImages; i++) {
                                html += `<input type="file" class="input-file" name="ProductPictures.Pictures[${i}].Image"/>`;
                                html += `<input type="radio" name="ProductPictures.PreviewNnmber" value="${i}">`;
                            }

                            loadImagesInnerHtml.innerHTML = html;
                        }
                    </script>
                </div>
            </div>
            <div class="form-btn form-group">
                <div class="d-inline">
                    <a asp-action="Index" class="input-back">Вернуться назад</a>
                </div>
                <div class="d-inline">
                    <input type="submit" value="Редактировать" class="btn-create btn" />

                </div>
            </div>
        </form>
    </div>
   
</section>
