@model IEnumerable<CosmeticShop.Models.Products.ProductContainer>

@{
    ViewData["Title"] = "Index";
}


<style>
    body {
        background-color: #1A1310 !important;
    }
</style>

<section class="table-add-product">
    <div class="create-product">
            <a asp-action="Create" class="btn-create-product">Добавить товар</a>
    </div>
    <table class="table">
        <thead>
            <tr class="mx-auto">
                <th scope="col">
                    Название товара
                </th>
                <th scope="col">
                    Категория
                </th>
                <th scope="col">
                    Цена
                </th>
                <th scope="col">
                    Количество
                </th>
                <th scope="col">
                    Срок годность
                </th>
                <th scope="col"></th>
            </tr>
            <tr class="justTh">
                <th colspan="6"></th>
            </tr>
        
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCategory.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountProducts)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate) -
                        @Html.DisplayFor(modelItem => item.ExpirationDate)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-details btn-product">Просмотр</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit btn-product">Редактирование</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete btn-product">Удаление</a>
                    </td>
                </tr>

               
            }
        </tbody>
    </table>

</section>