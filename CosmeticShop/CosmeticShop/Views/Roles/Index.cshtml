@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<style>
    body {
        background-color: #1A1310 !important;
    }
</style>
<section class="table-roles container-myself-info">
    <h2>Список ролей</h2>
    <table class="table text-center">
        <thead>
            <tr class="mx-auto">
                <th scope="col">
                    Название роли
                </th>
                <th scope="col">
                    Просмотр заказа
                </th>
            </tr>
            <tr class="justTh">
                <th colspan="6"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <th scope="row">
                        @role.Name
                    </th>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="create-roles">
        <a asp-action="Create" class="btn-create-product b-inline">Добавить роль</a>
        <a asp-action="UserList" class="btn-create-product b-inline">Список пользователей</a>
    </div>
</section>