</head>

<body>
    <header>
        <div class="container-fluid">

            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-first navbar-nav justify-content-center">
                        <a class="nav-item nav-link active" asp-area="" asp-controller="Home"
                            asp-action="Index">Главная</a>
                        <a class="nav-item nav-link active" asp-area="" asp-controller="Traiding"
                            asp-action="Index">Меню</a>
                        <a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="AboutUs">Поддержка</a>
                        <a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="Contacts">Контакты</a>

                    </div>
                    <div class="navbar-second navbar-nav  justify-content-end">
                        <a class="nav-link nav-item text-dark" asp-area="" asp-controller="Orders" asp-action="Index">
                            <img src="~/image/shopping-bag.png" alt="user" style="width: auto; height: auto;">
                        </a>


                        @* <!-- hiden -->
                            <div class="dropdown">
                            <button class="btn btn-circle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            <img src="~/image/search.png" alt="user">
                            </button>
                            <div class="dropdown-menu dropdown-search" aria-labelledby="dropdownMenuButton">
                            <form class="navbar form-inline">
                            <input class="form-control mr-sm-2" type="search" placeholder="Введите товар"
                            aria-label="Search">
                            <button class="btn btn-circle my-2 my-sm-0" type="submit">
                            <img src="~/image/search.png" alt="search" class="search">
                            </button>
                            </form>
                            </div>
                            </div>
                            <!-- hiden -->
                        *@


                        <div class="dropdown">
                            <button class="btn btn-circle nav-item"  type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                <img src="~/image/user.png" alt="user-header">
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Вход в
                                        аккаунт</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account"
                                    asp-action="Register">Зарегистрироваться</a>

                                }
                                else
                                {
                                    <a class="dropdown-item" asp-area="" asp-controller="PersonalArea"
                                    asp-action="Index">Личный
                                        кабинет</a>
                                    <div class="dropdown-divider"></div>
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        <input class="dropdown-item" type="submit" value="Выход" />
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/image/logo.png" alt="logo-header" id="logo-header">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                    aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
            </nav>
        </div>



    </header>
    
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer container-fluid">
        <div class="container-fluid">
            <div class="row">

                <div class="col-xs-2 col-md-2">
