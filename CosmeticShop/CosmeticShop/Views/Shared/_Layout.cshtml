    <link rel="stylesheet" href="~/css/TraidingFilter.css" />
    <link rel="stylesheet" href="~/css/CreateEditProduct.css" />
    <link rel="stylesheet" href="~/css/TraidingIndexProduct.css" />
    <link rel="stylesheet" href="~/css/CardProduct.css" />
    <link rel="stylesheet" href="~/css/OrdersToCollect.css" />
    <link rel="stylesheet" href="~/css/Roles.css" />
    <link rel="stylesheet" href="~/css/AccountLogReg.css" />
    <link rel="stylesheet" href="~/css/Orders.css" />
    <link rel="stylesheet" href="~/css/ProductDetails.css" />
    <link rel="stylesheet" href="~/css/OrderOrdering.css" />
    <link rel="stylesheet" href="~/css/OrdersHistory.css" />
    <link rel="stylesheet" href="~/css/Contact.css" />
    <link rel="stylesheet" href="~/css/AboutUs.css" />

    <link rel="stylesheet" href="~/css/Payment.css"/>

    <link rel="stylesheet" href="~/css/LayoutHeader.css" />
    <link rel="stylesheet" href="~/css/LayoutBody.css" />
