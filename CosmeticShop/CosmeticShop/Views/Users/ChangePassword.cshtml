@model CosmeticShop.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}

<style>
    body {
        background-color: #1A1310 !important;
    }
</style>



<section class="create-product-container">

    <h2>Изменение пароля @Model.Email</h2>
    <div class="container-prosuct">

        <div class="row">
            <div class="col">

                <form asp-action="ChangePassword" asp-controller="Users">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Email" />
                    <div class="form-group">
                        <label asp-for="OldPassword" class="text-lable control-label">Старый пароль</label>
                        <input type="text" asp-for="OldPassword" class="form-input form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="text-lable control-label">Новый пароль</label>
                        <input type="text" asp-for="NewPassword" class="form-input form-control" />
                    </div>
 
                    <div class="product-cat-btn">

                        <div class="form-group d-inline">
                            <a asp-action="Index" class="input-back">Вернуться назад</a>
                        </div>
                        <div class="form-group d-inline">
                            <input type="submit" value="Сохранить" class="btn-create btn" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>