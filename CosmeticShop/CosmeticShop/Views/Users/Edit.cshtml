@model CosmeticShop.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<style>
    body {
        background-color: #1A1310 !important;
    }
</style>


<section class="create-product-container">

    <h2>Добавление Новой роли</h2>
    <div class="container-prosuct">

        <div class="row">
            <div class="col">
                <div asp-validation-summary="All" class="text-danger"></div>

                <form asp-action="Edit" asp-controller="Users">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="text-lable control-label">Email</label>
                        <input type="text" asp-for="Email" class="form-input form-control" />
                    </div>
                     <div class="product-cat-btn">

                        <div class="form-group d-inline">

                            <a asp-action="Index" class="input-back">Вернуться назад</a>
                        </div>
                        <div class="form-group d-inline">
                        <input type="submit" value="Сохранить" class="btn-create btn" />

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>