@model IEnumerable<CosmeticShop.Models.Users.User>
@{
    ViewBag.Title = "Список пользователей";
}

<style>
    body {
        background-color: #1A1310 !important;
    }
</style>

<section class="table-roles container-myself-info">
    <h2>Список ролей</h2>
    <table class="table text-center">
        <thead>
            <tr class="mx-auto">
                <th scope="col">
                    Электронная почта
                </th>
                <th scope="col">
                    Просмотр заказа
                </th>
            </tr>
            <tr class="justTh">
                <th colspan="6"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">
                        @user.Email
                    </th>
                    <td>
                        @* <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-danger">
                            Удалить
                            </button>
                            </form> *@
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="ChangePassword" asp-route-id="@user.Id" >Сменить
                                пароль</a>
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                Заблокировать
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="create-roles">
        <a asp-action="Create" class="btn-add-user b-inline">Добавить пользователя</a>
</section>